<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editting Group</h2>
      <% if @group.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= @group.errors.count %> errors prohibited this obj from being saved:
          </h3>
          <ul>
            <% @group.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
              <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @group do |f| %>
        <div class="from-group">
          <label>グループ名</label>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="from-group">
          <label>紹介文</label>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div class="from-group">
          <label>グループ画像</label>
          <%= f.file_field :group_image, accept: "image/*", class:"form-control-file" %>
        </div>
        <div class="from-group" style="margin-top:20px;">
          <%= f.submit 'Update Group', url: 'group_path(@group.id)', method: :patch, class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>