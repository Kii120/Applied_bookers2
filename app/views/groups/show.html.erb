<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= @book.errors.count %> errors prohibited this obj from being saved:
      </h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3 border-right border-success">
      <%= render 'layouts/userinfo' , user: @user %>
      <%= render 'layouts/bookform' , book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group Detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= image_tag @group.get_group_image(80,80) %>
            </td>
            <td>
              <%= @group.name %>
            </td>
            <td>
              <%= @group.introduction %>
            </td>
            <td>
              <% @group_users.each do |group_user| %>
                <%= group_user.name %><br>
              <% end %>
            </td>
            <td>
              <% if @group.owner_id == current_user.id %>
                <%= link_to "Edit", edit_group_path(@group.id), class: "btn btn-success" %>
              <% end %>
            </td>
            <td>
              <% if GroupUser.find_by(user_id: current_user, group_id: @group.id) == nil %>
                <%= link_to "Join this group", group_users_path(group_id: @group.id), method: :create, class: 'btn btn-sm btn-success'%>
              <% else %>
                <%= link_to "Leave this group", group_user_path(@group), method: :delete, class: 'btn btn-sm btn-danger' %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>