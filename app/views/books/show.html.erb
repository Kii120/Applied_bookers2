<p id="notice">
  <%= flash[:notice] %>
</p>
<div class="container px-5 px-sm-0">
  <% if @book_new.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= @book_new.errors.count %> errors prohibited this obj from being saved:
      </h3>
      <ul>
        <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/userinfo', user: @book.user %>
      <%= render 'layouts/bookform', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <% if user_signed_in? %>
        <div class="search_form">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.text_field :word %>
            <%= f.select :range, options_for_select([['User'], ['Book']]) %>
            <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
            <%= f.submit "検索", class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do  %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td class="favorite-btn">
              <%= render "favorites/favorite-btn", book: @book %>
            </td>
            <td>
              コメント数:<%= @book.book_comments.count %>
            </td>
            <td>
              閲覧数:<%= @book.view_counts.count %>
            </td>
            <% if @book.user == current_user %>
              <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path, method: :delete, class: 'btn btn-sm btn-danger' %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div class="comments-index">
        <%= render 'book_comments/index', book_comments: @book_comments, book: @book %>
      </div>
    </div>
  </div>
</div>

