<p id="notice">
  <%= flash[:notice] %>
</p>
<div class="container px-5 px-sm-0">
  <% if @book_new.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= @book_new.errors.count %> errors prohibited this obj from being saved:
      </h3>
      <ul>
        <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @book_comment.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= @book_comment.errors.count %> errors prohibited this obj from being saved:
      </h3>
      <ul>
        <% @book_comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th>
              <%= link_to user_followings_path(@book.user) do %>
                <%= @book.user.followings.count %>
              <% end %>
            </th>
          </tr>
          <tr>
            <th>followers</th>
            <th>
              <%= link_to user_followers_path(@book.user) do %>
                <%= @book.user.followers.count %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <% unless @book.user == current_user %>
        <% if current_user.following?(@book.user) %>
          <%= link_to "フォロー外す", user_relationships_path(@book.user.id), method: :delete, class:"btn btn-primary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@book.user.id), method: :post, class:"btn btn-primary" %>
        <% end %>
      <% end %>
      <div class="row" style='margin-top: 10px;'>
          <%= link_to edit_user_path(@book.user_id), class: "btn btn-outline-secondary btn-block edit_user_path" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book_new do |f| %>
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <label>Opinion</label>
            <%= f.text_area :body, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <% if user_signed_in? %>
        <div class="search_form">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.text_field :word %>
            <%= f.select :range, options_for_select([['User'], ['Book']]) %>
            <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
            <%= f.submit "検索", class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do  %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
                <% if @book.favorited_by?(current_user)  %>
                  <%= link_to book_favorites_path(@book.id), method: :delete do %>
                    <i class="fas fa-heart"></i><%= @book.favorites.count %>
                  <% end %>
                <% else %> 
                  <%= link_to book_favorites_path(@book.id), method: :post do %>
                    <i class="far fa-heart"></i><%= @book.favorites.count %>
                  <% end %>
                <% end %>
            </td>
            <td>
              コメント数:<%= @book.book_comments.count %>
            </td>
            <% if @book.user == current_user %>
              <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path, method: :delete, class: 'btn btn-sm btn-danger' %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <table>
        <tbody>
          <% @book_comments.each do |comment| %>
            <tr>
              <td>
                <%= link_to user_path(comment.user.id) do %>
                  <%= image_tag comment.user.get_profile_image(80,80) %><br>
                  <%= comment.user.name %>
                <% end %>
              </td>
              <td>
                <%= comment.comment %>
              </td>
              <% if comment.user == current_user %>
                <td>
                  <%= link_to "Destroy", book_book_comment_path(comment.book_id, comment.id), method: :delete, class: 'btn btn-sm btn-danger' %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= form_with model: [@book, @book_comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit '送信', class:"btn btn-success" %>
          </div>
      <% end %>
    </div>
  </div>
</div>

