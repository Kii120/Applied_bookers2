<p id="notice">
  <%= flash[:notice] %>
</p>
<div class="container px-5 px-sm-0">
  <% if @book_new.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= @book_new.errors.count %> errors prohibited this obj from being saved:
      </h3>
      <ul>
        <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <!--<%= image_tag @book.user.get_profile_image(100,100) %>-->
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @book.user == current_user %>
          <%= link_to edit_user_path, class: "btn btn-outline-secondary btn-block edit_user_path" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% else %>
          <%= link_to user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
        <h2 class="mt-3">New book</h2>
        
        <%= form_with model: @book_new do |f| %>
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class:"form-control" %>
          </div>
          <div class="form-group">
            <label>Opinion</label>
            <%= f.text_area :body, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class:"btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do  %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy", book_path, method: :delete, class: 'btn btn-sm btn-danger' %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

